{
  "name": "nestjs-workflow",
  "version": "1.0.0",
  "description": "BPMN engine module for nestjs framework.",
  "main": "./dist/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "tslint -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenexo/nestjs-workflow.git"
  },
  "keywords": [
    "nestjs",
    "workflow",
    "bpmn-engine"
  ],
  "author": "Vahid V.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenexo/nestjs-workflow/issues"
  },
  "homepage": "https://github.com/wenexo/nestjs-workflow#readme",
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@wenex/workflow-lib": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>/"
    ],
    "testRegex": "[.]spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
